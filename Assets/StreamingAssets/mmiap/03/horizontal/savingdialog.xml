<?xml version="1.0" encoding="UTF-8"?>
<Dialog
    childContent="Layout"
    content="PurchaseDialog"
    height="fill_parent"
    width="fill_parent" >

    <Item
        background="mmiap/03/bg.png"
        content="scrollview"
        height="fill_parent"
        orientation="vertical"
        stytle="ScrollView"
        width="fill_parent" >

        <Item
            background="mmiap/03/bg2.png"
            content="MainTitle"
            height="wrap_content"
            orientation="vertical"
            stytle="LinearLayout"
            width="fill_parent" >

            <Item
                background="mmiap/03/title1_bg.png"
                content="MainTiteLayout"
                height="70"
                stytle="RelativeLayout"
                width="fill_parent" >

                <Item
                    background="mmiap/03/logo1.png"
                    content="MainTitle"
                    gravity="center_in_parent"
                    height="70"
                    stytle="TextView"
                    width="200" >
                </Item>
            </Item>

            <Item
                background="mmiap/03/title2_bg.png"
                content="smallTitlelayout"
                height="60"
                paddingLeft="10"
                paddingRight="20"
                stytle="RelativeLayout"
                width="fill_parent" >

                <Item
                    content="SMALLTitle"
                    gravity="center_in_parent"
                    height="wrap_content"
                    paddingLeft="5"
                    stytle="TextView"
                    text="手机话费支付"
                    textsize="20"
                    width="wrap_content" >
                </Item>
            </Item>

            <Item
                content="ResultLayout"
                gravity="center_horizontal"
                height="fill_parent"
                orientation="vertical"
                paddingBottom="10"
                paddingLeft="10"
                paddingRight="10"
                paddingTop="15"
                stytle="LinearLayout"
                width="fill_parent" >

                <Item
                    background="mmiap/03/infobg.9.png"
                    bitmap="mmiap/03/infobg.9.png"
                    content="ProductView"
                    gravity="center_horizontal"
                    height="wrap_content"
                    orientation="vertical"
                    stytle="LinearLayout"
                    width="fill_parent" >

                    <Item
                        content="ProductView"
                        gravity="center_horizontal"
                        height="wrap_content"
                        orientation="horizontal"
                        paddingBottom="90"
                        paddingTop="90"
                        stytle="LinearLayout"
                        width="wrap_content" >

                        <Item
                            background="mmiap/03/icon_info.png"
                            content="warnicon"
                            height="76"
                            margingRight="10"
                            stytle="TextView"
                            width="76" >
                        </Item>

                        <Item
                            content="ProductInfo"
                            gravity="left"
                            height="wrap_content"
                            stytle="TextView"
                            text="若不进行付费，您将无法获得更多的应用体验，是否确认？"
                            textcolor="#ffec9200"
                            textsize="18"
                            width="wrap_content" >
                        </Item>
                    </Item>
                </Item>

                <Item
                    content="buttonView"
                    height="wrap_content"
                    orientation="horizontal"
                    paddingTop="30"
                    stytle="LinearLayout"
                    width="fill_parent" >

                    <Item
                        background="mmiap/03/btn_blue01.png"
                        content="backbutton"
                        height="70"
                        margingRight="10"
                        paddingBottom="10"
                        paddingTop="10"
                        pressedBG="mmiap/03/btn_blue01_click.png"
                        stytle="Button"
                        text="返  回"
                        textsize="20"
                        weight="1"
                        width="0" >
                    </Item>

                    <Item
                        background="mmiap/03/btn_gray.png"
                        content="confirmButton"
                        height="70"
                        margingLeft="10"
                        paddingBottom="10"
                        paddingTop="10"
                        pressedBG="mmiap/03/btn_gray_click.png"
                        stytle="Button"
                        text="确  认"
                        textsize="20"
                        weight="1"
                        width="0" >
                    </Item>
                </Item>

                <Item
                    content="BottomLayout"
                    height="fill_parent"
                    margingBottom="5"
                    margingTop="50"
                    orientation="horizontal"
                    paddingBottom="10"
                    paddingTop="10"
                    stytle="RelativeLayout"
                    width="fill_parent" >

                    <Item
                        content="bottomContent"
                        gravity="align_parent_bottom|r_center_horizontal"
                        height="wrap_content"
                        orientation="horizontal"
                        stytle="LinearLayout"
                        width="wrap_content" >

                        <Item
                            background="mmiap/03/logo3.png"
                            content="bottomlogo"
                            height="35"
                            margingBottom="5"
                            margingLeft="10"
                            stytle="TextView"
                            width="50" >
                        </Item>

                        <Item
                            content="logoText"
                            height="wrap_content"
                            margingBottom="5"
                            paddingLeft="3"
                            stytle="TextView"
                            text="版权所有 中国移动"
                            textsize="15"
                            width="wrap_content" >
                        </Item>

                        <Item
                            content="version"
                            height="wrap_content"
                            margingBottom="0"
                            margingBottom="5"
                            margingLeft="5"
                            paddingLeft="3"
                            stytle="TextView"
                            text="MM-SIAP v1.2.3"
                            textcolor="#ff818181"
                            textsize="12"
                            width="wrap_content" >
                        </Item>
                    </Item>
                </Item>
            </Item>
        </Item>
    </Item>

</Dialog>